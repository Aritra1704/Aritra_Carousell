<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvBeer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_2"
        android:elevation="@dimen/m_5">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/m_10">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:id="@+id/ivAdImage"/>

        <TextView
                android:id="@+id/tvAdHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Header"
                android:textSize="@dimen/t_16"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tvAdBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/m_5"
                android:maxLines="2"
                android:hint="Select"
                android:textSize="@dimen/t_14"
                android:textStyle="italic"/>

        <TextView
                android:id="@+id/tvAdTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llBeerPub"
                android:layout_toRightOf="@+id/ivAdImage"
                android:hint="Select"
                android:textSize="@dimen/t_14"
                android:textStyle="italic"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>